---
import LanguageSwitcher from './LanguageSwitcher.astro';
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated Background -->
  <div class="absolute inset-0 bg-gradient-hero"></div>
  <div class="absolute inset-0 bg-black/30"></div>
  
  <!-- Floating Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-10 w-20 h-20 bg-accent-400/20 rounded-full animate-float"></div>
    <div class="absolute top-40 right-20 w-16 h-16 bg-soul-400/20 rounded-full animate-float" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-40 left-20 w-12 h-12 bg-primary-400/20 rounded-full animate-float" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-20 right-10 w-24 h-24 bg-accent-400/20 rounded-full animate-float" style="animation-delay: 0.5s;"></div>
  </div>
  
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <svg class="w-full h-full" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="music-notes" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <circle cx="5" cy="5" r="1" fill="currentColor"/>
          <circle cx="15" cy="15" r="1" fill="currentColor"/>
          <path d="M8 8 Q12 6 16 8" stroke="currentColor" stroke-width="0.5" fill="none"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#music-notes)" class="text-white"/>
    </svg>
  </div>

  <!-- Language Switcher - Mobile -->
  <div class="absolute top-6 right-6 z-20 md:hidden">
    <LanguageSwitcher />
  </div>

  <!-- Content -->
  <div class="relative z-10 container mx-auto px-4 text-center text-white">
    <div class="max-w-5xl mx-auto space-y-8">
      <!-- Main Title with Brand Elements -->
      <div class="space-y-4">
        <div class="inline-flex items-center space-x-4 mb-6">
          <div class="w-16 h-16 bg-gradient-brand rounded-2xl flex items-center justify-center shadow-glow animate-glow">
            <span class="text-white font-bold text-xl">MV</span>
          </div>
          <div class="h-12 w-px bg-gradient-to-b from-transparent via-white/50 to-transparent"></div>
          <div class="flex items-center space-x-2">
            <div class="w-6 h-4 bg-cameroon-green"></div>
            <div class="w-6 h-4 bg-cameroon-red"></div>
            <div class="w-6 h-4 bg-cameroon-yellow"></div>
          </div>
        </div>
        
        <h1 class="text-6xl md:text-8xl font-bold leading-tight animate-fade-in">
          <span data-i18n="hero.title" class="bg-gradient-to-r from-white via-accent-200 to-white bg-clip-text text-transparent">Mr Valentino</span>
        </h1>
        
        <div class="flex items-center justify-center space-x-4 mt-6">
          <div class="h-px bg-gradient-to-r from-transparent via-white/50 to-transparent flex-1 max-w-32"></div>
          <div class="text-accent-400 text-2xl">‚ô™</div>
          <div class="h-px bg-gradient-to-r from-transparent via-white/50 to-transparent flex-1 max-w-32"></div>
        </div>
      </div>
      
      <p class="text-2xl md:text-3xl text-blue-100 font-light animate-slide-up" data-i18n="hero.subtitle">
        La voix du c≈ìur. L'√©motion sans filtre.
      </p>
      
      <p class="text-lg md:text-xl text-blue-200 max-w-3xl mx-auto animate-slide-up leading-relaxed" style="animation-delay: 0.2s;" data-i18n="hero.description">
        Chanteur franco-camerounais, passionn√© par la musique qui √©meut et rassemble.
      </p>

      <!-- Achievement Badges with Enhanced Design -->
      <div class="flex flex-col md:flex-row items-center justify-center gap-4 md:gap-8 mt-12 animate-slide-up" style="animation-delay: 0.4s;">
        <div class="group bg-white/10 backdrop-blur-md rounded-2xl px-6 py-4 border border-white/20 hover:bg-white/20 transition-all duration-300 hover:scale-105 shadow-brand">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-accent-500 rounded-full flex items-center justify-center">
              <span class="text-white font-bold text-lg">üèÜ</span>
            </div>
            <div class="text-left">
              <div class="text-accent-400 font-semibold text-sm">2024</div>
              <div class="text-white text-sm md:text-base font-medium" data-i18n="hero.ccnbWinner">Vainqueur CCNB sur sc√®ne</div>
            </div>
          </div>
        </div>
        
        <div class="group bg-white/10 backdrop-blur-md rounded-2xl px-6 py-4 border border-white/20 hover:bg-white/20 transition-all duration-300 hover:scale-105 shadow-soul">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 bg-soul-500 rounded-full flex items-center justify-center">
              <span class="text-white font-bold text-lg">üí´</span>
            </div>
            <div class="text-left">
              <div class="text-soul-400 font-semibold text-sm">2024</div>
              <div class="text-white text-sm md:text-base font-medium" data-i18n="hero.publicChoice">Coup de c≈ìur du public - Caraquet</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced Call to Action Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mt-16 animate-slide-up" style="animation-delay: 0.6s;">
        <a 
          href="#music" 
          class="group relative bg-gradient-to-r from-accent-500 to-accent-600 hover:from-accent-600 hover:to-accent-700 text-white px-8 py-4 rounded-2xl font-semibold transition-all duration-300 transform hover:scale-105 shadow-accent hover:shadow-accent-lg flex items-center overflow-hidden"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
          <span class="relative mr-3 text-xl">üéß</span>
