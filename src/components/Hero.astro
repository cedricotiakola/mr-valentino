---
import LanguageSwitcher from './LanguageSwitcher.astro';
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Enhanced Animated Background -->
  <div class="absolute inset-0 bg-gradient-hero"></div>
  <div class="absolute inset-0 bg-black/40"></div>
  
  <!-- Floating Elements with better positioning -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-10 w-24 h-24 bg-accent-400/20 rounded-full animate-float blur-sm"></div>
    <div class="absolute top-40 right-20 w-20 h-20 bg-soul-400/20 rounded-full animate-float blur-sm" style="animation-delay: 1s;"></div>
    <div class="absolute bottom-40 left-20 w-16 h-16 bg-primary-400/20 rounded-full animate-float blur-sm" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-20 right-10 w-28 h-28 bg-accent-400/20 rounded-full animate-float blur-sm" style="animation-delay: 0.5s;"></div>
    <div class="absolute top-1/2 left-1/4 w-12 h-12 bg-soul-400/15 rounded-full animate-float blur-sm" style="animation-delay: 1.5s;"></div>
    <div class="absolute top-1/3 right-1/3 w-18 h-18 bg-primary-400/15 rounded-full animate-float blur-sm" style="animation-delay: 2.5s;"></div>
  </div>
  
  <!-- Enhanced Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <svg class="w-full h-full" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="music-notes" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <circle cx="5" cy="5" r="1.5" fill="currentColor"/>
          <circle cx="15" cy="15" r="1.5" fill="currentColor"/>
          <path d="M8 8 Q12 6 16 8" stroke="currentColor" stroke-width="0.8" fill="none"/>
          <path d="M3 12 Q7 10 11 12" stroke="currentColor" stroke-width="0.6" fill="none"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#music-notes)" class="text-white"/>
    </svg>
  </div>

  <!-- Language Switcher - Mobile -->
  <div class="absolute top-6 right-6 z-20 md:hidden">
    <LanguageSwitcher />
  </div>

  <!-- Enhanced Content -->
  <div class="relative z-10 container mx-auto px-4 text-center text-white">
    <div class="max-w-5xl mx-auto space-y-10">
      <!-- Enhanced Main Title with Brand Elements -->
      <div class="space-y-6">
        <div class="inline-flex items-center space-x-6 mb-8">
          <div class="relative">
            <div class="w-20 h-20 bg-gradient-brand rounded-3xl flex items-center justify-center shadow-glow animate-glow">
              <span class="text-white font-bold text-2xl tracking-tight">MV</span>
            </div>
            <!-- Enhanced glow effect -->
            <div class="absolute inset-0 w-20 h-20 bg-gradient-brand rounded-3xl opacity-50 blur-xl animate-pulse"></div>
          </div>
          <div class="h-16 w-px bg-gradient-to-b from-transparent via-white/60 to-transparent"></div>
          <div class="flex items-center space-x-3">
            <div class="w-8 h-5 bg-cameroon-green rounded-sm shadow-lg"></div>
            <div class="w-8 h-5 bg-cameroon-red rounded-sm shadow-lg"></div>
            <div class="w-8 h-5 bg-cameroon-yellow rounded-sm shadow-lg"></div>
          </div>
        </div>
        
        <h1 class="text-7xl md:text-9xl font-black leading-none animate-fade-in tracking-tight">
          <span data-i18n="hero.title" class="bg-gradient-to-r from-white via-accent-200 to-white bg-clip-text text-transparent drop-shadow-2xl">Mr Valentino</span>
        </h1>
        
        <div class="flex items-center justify-center space-x-6 mt-8">
          <div class="h-px bg-gradient-to-r from-transparent via-white/60 to-transparent flex-1 max-w-40"></div>
          <div class="text-accent-400 text-3xl animate-pulse">‚ô™</div>
          <div class="h-px bg-gradient-to-r from-transparent via-white/60 to-transparent flex-1 max-w-40"></div>
        </div>
      </div>
      
      <p class="text-3xl md:text-4xl text-blue-100 font-light animate-slide-up leading-relaxed tracking-wide" data-i18n="hero.subtitle">
        La voix du c≈ìur. L'√©motion sans filtre.
      </p>
      
      <p class="text-xl md:text-2xl text-blue-200 max-w-4xl mx-auto animate-slide-up leading-relaxed" style="animation-delay: 0.2s;" data-i18n="hero.description">
        Chanteur franco-camerounais, passionn√© par la musique qui √©meut et rassemble.
      </p>

      <!-- Enhanced Achievement Badges -->
      <div class="flex flex-col md:flex-row items-center justify-center gap-6 md:gap-10 mt-16 animate-slide-up" style="animation-delay: 0.4s;">
        <div class="group bg-white/15 backdrop-blur-xl rounded-3xl px-8 py-6 border border-white/30 hover:bg-white/25 transition-all duration-500 hover:scale-110 shadow-2xl hover:shadow-accent/20">
          <div class="flex items-center space-x-4">
            <div class="w-14 h-14 bg-accent-500 rounded-2xl flex items-center justify-center shadow-xl">
              <span class="text-white font-bold text-2xl">üèÜ</span>
            </div>
            <div class="text-left">
              <div class="text-accent-300 font-bold text-lg">2024</div>
              <div class="text-white text-lg font-semibold" data-i18n="hero.ccnbWinner">Vainqueur CCNB sur sc√®ne</div>
            </div>
          </div>
        </div>
        
        <div class="group bg-white/15 backdrop-blur-xl rounded-3xl px-8 py-6 border border-white/30 hover:bg-white/25 transition-all duration-500 hover:scale-110 shadow-2xl hover:shadow-soul/20">
          <div class="flex items-center space-x-4">
            <div class="w-14 h-14 bg-soul-500 rounded-2xl flex items-center justify-center shadow-xl">
              <span class="text-white font-bold text-2xl">üí´</span>
            </div>
            <div class="text-left">
              <div class="text-soul-300 font-bold text-lg">2024</div>
              <div class="text-white text-lg font-semibold" data-i18n="hero.publicChoice">Coup de c≈ìur du public - Caraquet</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced Call to Action Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-8 mt-20 animate-slide-up" style="animation-delay: 0.6s;">
        <a 
          href="#music" 
          class="group relative bg-gradient-to-r from-accent-500 via-accent-600 to-accent-700 hover:from-accent-600 hover:via-accent-700 hover:to-accent-800 text-white px-10 py-5 rounded-2xl font-bold text-lg transition-all duration-500 transform hover:scale-110 shadow-2xl hover:shadow-accent/40 flex items-center overflow-hidden"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/25 to-white/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
          <span class="relative mr-4 text-2xl">üéß</span>
          <span class="relative tracking-wide" data-i18n="hero.listenMusic">√âcouter ma musique</span>
          <svg class="relative w-6 h-6 ml-4 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a 
          href="#events" 
          class="group relative bg-transparent border-3 border-white/60 text-white hover:bg-white hover:text-primary-900 px-10 py-5 rounded-2xl font-bold text-lg transition-all duration-500 transform hover:scale-110 backdrop-blur-sm flex items-center overflow-hidden shadow-2xl hover:shadow-white/20"
        >
          <div class="absolute inset-0 bg-white translate-y-[100%] group-hover:translate-y-0 transition-transform duration-500"></div>
          <span class="relative mr-4 text-2xl">üé§</span>
          <span class="relative tracking-wide" data-i18n="hero.watchPerformances">Voir mes √©v√©nements</span>
        </a>
      </div>

      <!-- Enhanced Social Proof -->
      <div class="mt-20 animate-slide-up" style="animation-delay: 0.8s;">
        <div class="flex items-center justify-center space-x-12 text-white/80">
          <div class="text-center group hover:scale-110 transition-transform duration-300">
            <div class="text-3xl font-black text-accent-400 mb-2">2024</div>
            <div class="text-sm font-medium tracking-wide">Ann√©e de cons√©cration</div>
          </div>
          <div class="w-px h-16 bg-white/40"></div>
          <div class="text-center group hover:scale-110 transition-transform duration-300">
            <div class="text-3xl font-black text-soul-400 mb-2">2</div>
            <div class="text-sm font-medium tracking-wide">Prix remport√©s</div>
          </div>
          <div class="w-px h-16 bg-white/40"></div>
          <div class="text-center group hover:scale-110 transition-transform duration-300">
            <div class="text-3xl font-black text-primary-400 mb-2">‚àû</div>
            <div class="text-sm font-medium tracking-wide">√âmotions partag√©es</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Scroll Indicator -->
  <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" class="group flex flex-col items-center text-white/70 hover:text-white transition-all duration-300">
      <div class="w-8 h-12 border-2 border-current rounded-full flex justify-center relative overflow-hidden">
        <div class="w-1.5 h-4 bg-current rounded-full mt-3 animate-pulse"></div>
      </div>
      <span class="text-sm mt-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300 font-medium tracking-wide">D√©couvrir</span>
    </a>
  </div>
</section>

<style>
  .bg-300% {
    background-size: 300% 300%;
  }
  
  .border-3 {
    border-width: 3px;
  }
  
  .drop-shadow-2xl {
    filter: drop-shadow(0 25px 25px rgb(0 0 0 / 0.15));
  }
</style>