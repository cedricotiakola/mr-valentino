            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
        
        <a 
          href="#music" 
          class="group relative bg-transparent border-2 border-white/50 text-white hover:bg-white hover:text-primary-900 px-8 py-4 rounded-2xl font-semibold transition-all duration-300 transform hover:scale-105 backdrop-blur-sm flex items-center overflow-hidden"
        >
          <div class="absolute inset-0 bg-white translate-y-[100%] group-hover:translate-y-0 transition-transform duration-300"></div>
          <span class="relative mr-3 text-xl">üì∫</span>
          <span class="relative" data-i18n="hero.watchPerformances">Regarder mes performances</span>
        </a>
      </div>

      <!-- Social Proof -->
      <div class="mt-16 animate-slide-up" style="animation-delay: 0.8s;">
        <div class="flex items-center justify-center space-x-8 text-white/70">
          <div class="text-center">
            <div class="text-2xl font-bold text-accent-400">2024</div>
            <div class="text-sm">Ann√©e de cons√©cration</div>
          </div>
          <div class="w-px h-12 bg-white/30"></div>
          <div class="text-center">
            <div class="text-2xl font-bold text-soul-400">2</div>
            <div class="text-sm">Prix remport√©s</div>
          </div>
          <div class="w-px h-12 bg-white/30"></div>
          <div class="text-center">
            <div class="text-2xl font-bold text-primary-400">‚àû</div>
            <div class="text-sm">√âmotions partag√©es</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" class="group flex flex-col items-center text-white/70 hover:text-white transition-colors">
      <div class="w-6 h-10 border-2 border-current rounded-full flex justify-center">
        <div class="w-1 h-3 bg-current rounded-full mt-2 animate-pulse"></div>
      </div>
      <span class="text-xs mt-2 opacity-0 group-hover:opacity-100 transition-opacity">D√©couvrir</span>
    </a>
  </div>
</section>

<style>
  .bg-300% {
    background-size: 300% 300%;
  }
</style>