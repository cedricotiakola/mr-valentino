    <div class="absolute bottom-32 sm:bottom-40 left-8 sm:left-20 w-10 sm:w-12 lg:w-16 h-10 sm:h-12 lg:h-16 bg-primary-400/20 rounded-full animate-float blur-sm" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-16 sm:bottom-20 right-4 sm:right-10 w-20 sm:w-24 lg:w-28 h-20 sm:h-24 lg:h-28 bg-accent-400/20 rounded-full animate-float blur-sm" style="animation-delay: 0.5s;"></div>
    <div class="absolute top-1/2 left-1/4 w-8 sm:w-10 lg:w-12 h-8 sm:h-10 lg:h-12 bg-soul-400/15 rounded-full animate-float blur-sm" style="animation-delay: 1.5s;"></div>
    <div class="absolute top-1/3 right-1/3 w-12 sm:w-14 lg:w-18 h-12 sm:h-14 lg:h-18 bg-primary-400/15 rounded-full animate-float blur-sm" style="animation-delay: 2.5s;"></div>
  </div>
  
  <!-- Enhanced Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <svg class="w-full h-full" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="music-notes" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <circle cx="5" cy="5" r="1.5" fill="currentColor"/>
          <circle cx="15" cy="15" r="1.5" fill="currentColor"/>
          <path d="M8 8 Q12 6 16 8" stroke="currentColor" stroke-width="0.8" fill="none"/>
          <path d="M3 12 Q7 10 11 12" stroke="currentColor" stroke-width="0.6" fill="none"/>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#music-notes)" class="text-white"/>
    </svg>
  </div>

  <!-- Language Switcher - Mobile -->
  <div class="absolute top-4 sm:top-6 right-4 sm:right-6 z-20 lg:hidden">
    <LanguageSwitcher />
