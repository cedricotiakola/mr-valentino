<section id="booking" class="py-12 sm:py-16 lg:py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12 sm:mb-16 animate-on-scroll">
